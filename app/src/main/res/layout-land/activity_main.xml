<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignBottom="@id/Linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/Linear1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@color/black">


        <VideoView
            android:id="@+id/videoView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/goBack"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/videoView2"
        android:layout_alignBottom="@id/videoView2"
        android:background="@color/white"
        android:text=""

        />


    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/firstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignTop="@id/Linear1"
        android:layout_alignRight="@id/Linear1"
        android:background="@color/white"
        android:text=" In-Play " />


    <TextView
        android:id="@+id/secondText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_alignRight="@id/videoView2"
        android:layout_alignTop="@id/videoView2"
        android:background="@color/white"
        android:text="" />



    <TextView
        android:id="@+id/scoreText"
        android:background="@drawable/rounded_corner_white"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        android:text="    [Team A]          vs          [Team B]    " />

    <TextView
        android:id="@+id/messi_20_1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/scoreText"
        android:layout_marginBottom="-70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="190dp"
        android:background="@drawable/rounded_corner_blue"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="   Goal #1 (20')   "
        />

    <TextView
        android:id="@+id/neymar_36_1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/scoreText"
        android:layout_marginBottom="-140dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="190dp"
        android:background="@drawable/rounded_corner_blue"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="   Goal #2 (36')   "
        />

    <TextView
        android:id="@+id/messi_76_1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/scoreText"
        android:layout_marginBottom="-210dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="190dp"
        android:background="@drawable/rounded_corner_blue"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="   Goal #3 (76')   "
        />


    <TextView
        android:id="@+id/williams_79_1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/scoreText"
        android:layout_marginBottom="-70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="190dp"
        android:background="@drawable/rounded_corner_red"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="   Goal #1 (79')   "
        />


    <TextView
        android:id="@+id/ChangeAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_corner_grey"
        android:text="  Multi Angle  " />



    <TextView
        android:id="@+id/replayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:background="@drawable/rounded_corner_grey"
        android:text="  Replay  "
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />



</RelativeLayout>