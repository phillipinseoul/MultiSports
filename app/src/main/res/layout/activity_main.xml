<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignBottom="@id/Linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/Linear1">

        <VideoView
            android:id="@+id/videoView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:id="@+id/Replay"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/videoView2"
        android:layout_marginBottom="-80dp"
        android:text=" [ Replay ] " />

    <TextView
        android:id="@+id/goal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Replay"
        android:layout_marginBottom="-60dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text=" Goal #1 "
        />

    <TextView
        android:id="@+id/goal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Replay"
        android:layout_marginBottom="-120dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text=" Goal #2 "
        />

    <TextView
        android:id="@+id/goal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Replay"
        android:layout_marginBottom="-180dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text=" Goal #3 "
        />


    <TextView
        android:id="@+id/goal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Replay"
        android:layout_marginBottom="-240dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text=" Goal #4 "
        />


    <Button
        android:id="@+id/ChangeAngle"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:text="Multi Angle" />


    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/firstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignTop="@id/Linear1"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:text=" In-Play " />


    <TextView
        android:id="@+id/secondText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/videoView2"
        android:background="@color/white"
        android:text="" />



</RelativeLayout>